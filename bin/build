#!/usr/bin/env bash

cd "$(dirname "$0")/../"

BUMP=${1:-minor}
VERSION="$(npx -c 'echo "$npm_package_version"')"
VERSION_BUMP="$(npx semver -i $BUMP $VERSION)"
ESM="./dist/esm/index.js"
MJS="./dist/mjs/fn2-$VERSION_BUMP.mjs"

rm -rf dist
tsc -b

ESM="./dist/esm/index.js"
MJS="./dist/mjs/fn2-$VERSION_BUMP.mjs"

npx rollup $ESM --context this --file $MJS -f esm
npx terser $MJS --compress -m -o $MJS

ESM="./dist/esm/patch.js"
MJS="./dist/mjs/patch-$VERSION_BUMP.mjs"

npx rollup $ESM --context this --file $MJS -f esm
npx terser $MJS --compress -m -o $MJS
